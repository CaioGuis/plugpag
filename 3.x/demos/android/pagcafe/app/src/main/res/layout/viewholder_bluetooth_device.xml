<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:padding="8dp">

    <View
        android:id="@+id/view_marker"
        android:layout_width="3dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_bluetooth_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/view_marker"/>

    <TextView
        android:id="@+id/txt_bluetooth_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/img_bluetooth_device_icon"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_bluetooth_device_mac_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/txt_bluetooth_device_name"
        android:layout_toRightOf="@id/img_bluetooth_device_icon"
        android:textSize="14sp"/>

</RelativeLayout>