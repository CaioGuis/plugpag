<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/plugpag_colorPrimary</item>
        <item name="colorPrimaryDark">@color/plugpag_colorPrimaryDark</item>
        <item name="colorAccent">@color/plugpag_colorAccent</item>
    </style>

    <style name="TopProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_marginTop">@dimen/horizontal_progressbar_marginTop</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="ButtonRedStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/textColorPrimaryRed</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">@drawable/button_background_red</item>
    </style>

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">#22AAAAAA</item>
    </style>

    <style name="TextLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Footer -->
    <style name="MainFooterRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="MainFooterLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainFooterContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- /Footer -->

    <!-- Content Fragments -->
    <style name="FragmentContainerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <!-- /Content Fragment -->

    <style name="Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="SingleCharacterButton" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenButton" parent="Button">
        <item name="android:background">@drawable/button_green_background</item>
    </style>

    <style name="MarqueeTextView">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

</resources>
